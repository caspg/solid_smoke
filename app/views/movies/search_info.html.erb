<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div>  
      <p>divSearch for a movie in OMDb <%= link_to "(The Open Movie Database)", "http://www.omdbapi.com/", :target => "_blank" %> or add movie informations manually.</p>
      
      <div class="form">
        <%= form_tag({controller: "movies", action: "search_info"}, method: "get", class: "form-inline", name: "search") do %>
          <div class="form-group">
            <%= text_field_tag :title, nil, class: "form-control", placeholder: "movie title"%>
            <%= submit_tag "Search", class: "btn btn-default", :name => nil, id: "search" %>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="list-group omdb-search">  
      
      <% if @search_result %>
        <% if @search_result["Error"] %>
          <div class="alert alert-warning"><%= @search_result["Error"] %></div>
        <% else %>
          <% @search_result["Search"].each do |result| %>
            <%= link_to "#{result["Title"]}, #{result["Year"]}", new_movie_path(:title => result["Title"]), class: "list-group-item" %>
          <% end %>
        <% end %>
      <% end %>
    
    </div>
  </div>
</div>