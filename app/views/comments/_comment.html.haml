%section.comment
  %table
    %tr.details
      %td
        %em
          author: #{comment.user.username} | posted: #{time_ago_in_words(comment.created_at)} ago.
      %td
        = link_to 'delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure you want delete it?' }, class: 'pull-right' if current_user == comment.user
    %tr.content
      %td= comment.content
