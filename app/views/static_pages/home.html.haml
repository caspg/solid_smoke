= render 'about' unless user_signed_in?
.row
  .col-md-10.col-md-offset-1
    = link_to 'Add a new movie', search_info_movies_path, class: 'btn btn-default' if user_signed_in?

    .card
      .recent-gallery
        %h1 Recently added
        - @movies.each do |movie|
          %div
            = link_to(movie) do
              = image_tag movie.poster
              %h4= movie.title
